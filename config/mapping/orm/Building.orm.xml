<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="OpenTribes\Core\Entity\Building" table="ot_building">
    <indexes>
      <index name="FK_city" columns="city_id"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="UNQ_clot_in_city" columns="slot,city_id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="createdAt" type="datetime" column="created_at">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <field name="slot" column="slot" length="255">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="level" type="integer" column="level">
      <options>
        <option name="unsigned"/>
        <option name="default">1</option>
      </options>
    </field>
    <field name="cityId" type="integer" column="city_id">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="status" type="BuildStatus" column="status" length="0">
      <options>
        <option name="fixed"/>
        <option name="default">default</option>
      </options>
    </field>
    <many-to-one field="city" target-entity="City">
      <join-columns>
        <join-column name="city_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
